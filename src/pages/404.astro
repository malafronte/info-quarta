---
import StarlightPage from "@astrojs/starlight/components/StarlightPage.astro";
import robotSvg from "@assets/images/404-robot.svg";

const baseUrl = import.meta.env.BASE_URL || "/";
---

<StarlightPage
    frontmatter={{
        title: "404 - Pagina non trovata",
        template: "splash",
        hero: {
            title: "Pagina non trovata",
            tagline: "Sembra che tu ti sia perso nello spazio digitale.",
            image: {
                file: robotSvg,
            },
            actions: [
                {
                    text: "Torna alla home",
                    link: baseUrl,
                    icon: "right-arrow",
                    variant: "primary",
                },
            ],
        },
    }}
/>
